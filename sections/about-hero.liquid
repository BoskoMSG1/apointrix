{% comment %}
  ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
  APPOINTLY - ABOUT HERO
  About page hero section
  ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
{% endcomment %}

<section class="about-hero section">
  <div class="container">
    
    <div class="about-hero__wrapper">
      
      {%- comment -%} Content {%- endcomment -%}
      <div class="about-hero__content" data-aos="fade-up">
        {% if section.settings.subtitle != blank %}
          <span class="section-subtitle">{{ section.settings.subtitle }}</span>
        {% endif %}
        
        <h1 class="about-hero__title">{{ section.settings.title }}</h1>
        
        <div class="about-hero__description rte">
          {{ section.settings.description }}
        </div>

        {% if section.settings.cta_text != blank %}
          <div class="about-hero__cta">
            <a href="{{ section.settings.cta_link }}" class="btn btn--primary btn--large">
              {{ section.settings.cta_text }}
            </a>
          </div>
        {% endif %}
      </div>

      {%- comment -%} Image {%- endcomment -%}
      <div class="about-hero__image" data-aos="fade-left" data-aos-delay="200">
        {% if section.settings.image != blank %}
          <img 
            src="{{ section.settings.image | img_url: '800x' }}"
            srcset="{{ section.settings.image | img_url: '400x' }} 400w,
                    {{ section.settings.image | img_url: '800x' }} 800w,
                    {{ section.settings.image | img_url: '1200x' }} 1200w"
            sizes="(max-width: 768px) 100vw, 50vw"
            alt="{{ section.settings.image.alt | default: section.settings.title }}"
            loading="eager">
        {% else %}
          <div class="about-hero__placeholder">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

    </div>

  </div>
</section>

<style>
  .about-hero {
    padding-top: var(--space-20);
    padding-bottom: var(--space-20);
    background: linear-gradient(135deg, rgba(0, 122, 255, 0.05) 0%, rgba(88, 86, 214, 0.05) 100%);
  }

  .about-hero__wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  @media (min-width: 1024px) {
    .about-hero__wrapper {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-16);
    }
  }

  .about-hero__title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-6);
    line-height: 1.1;
  }

  .about-hero__description {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-8);
  }

  .about-hero__description p {
    margin-bottom: var(--space-4);
  }

  .about-hero__image {
    position: relative;
    border-radius: var(--radius-2xl);
    overflow: hidden;
    box-shadow: var(--shadow-2xl);
  }

  .about-hero__image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .about-hero__placeholder {
    aspect-ratio: 4 / 3;
    background-color: var(--color-bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>

{% schema %}
{
  "name": "About Hero",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "About Us"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "We Help Businesses Automate Bookings"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Founded in 2023, Appointly was born from a simple observation: too many great businesses were losing customers because booking was too complicated.</p><p>We believe every service business deserves a beautiful, easy-to-use booking website that works 24/7.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text (Optional)",
      "default": "Get Started"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    }
  ],
  "presets": [
    {
      "name": "About Hero"
    }
  ]
}
{% endschema %}
