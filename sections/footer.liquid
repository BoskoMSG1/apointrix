{% comment %}
  ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
  APPOINTLY - FOOTER SECTION
  Multi-column footer with links and social
  ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
{% endcomment %}

<footer class="site-footer section--bg-secondary">
  <div class="container">
    
    {%- comment -%} Footer Main {%- endcomment -%}
    <div class="footer__main">
      
      {%- comment -%} Column 1: Brand {%- endcomment -%}
      <div class="footer__column footer__column--brand">
        <a href="{{ routes.root_url }}" class="footer__logo">
          {% if section.settings.logo != blank %}
            <img src="{{ section.settings.logo | img_url: '150x' }}" alt="{{ shop.name }}">
          {% else %}
            <span class="logo__text">{{ shop.name }}</span>
          {% endif %}
        </a>
        
        {% if section.settings.tagline != blank %}
          <p class="footer__tagline">{{ section.settings.tagline }}</p>
        {% endif %}

        {%- comment -%} Social Links {%- endcomment -%}
        <div class="footer__social">
          {% if settings.social_facebook != blank %}
            <a href="{{ settings.social_facebook }}" target="_blank" rel="noopener" aria-label="Facebook">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          {% endif %}

          {% if settings.social_instagram != blank %}
            <a href="{{ settings.social_instagram }}" target="_blank" rel="noopener" aria-label="Instagram">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          {% endif %}

          {% if settings.social_twitter != blank %}
            <a href="{{ settings.social_twitter }}" target="_blank" rel="noopener" aria-label="Twitter">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
          {% endif %}

          {% if settings.social_linkedin != blank %}
            <a href="{{ settings.social_linkedin }}" target="_blank" rel="noopener" aria-label="LinkedIn">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>

      {%- comment -%} Footer Links Columns {%- endcomment -%}
      {% for block in section.blocks %}
        {% if block.type == 'link_column' %}
          <div class="footer__column" {{ block.shopify_attributes }}>
            {% if block.settings.title != blank %}
              <h3 class="footer__heading">{{ block.settings.title }}</h3>
            {% endif %}
            
            {% if block.settings.menu != blank %}
              <ul class="footer__links">
                {% for link in block.settings.menu.links %}
                  <li>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}

      {%- comment -%} Newsletter Column {%- endcomment -%}
      {% if section.settings.show_newsletter %}
        <div class="footer__column footer__column--newsletter">
          <h3 class="footer__heading">{{ section.settings.newsletter_title }}</h3>
          <p class="footer__newsletter-text">{{ section.settings.newsletter_text }}</p>
          
          {% form 'customer', class: 'footer__newsletter-form' %}
            {% if form.posted_successfully? %}
              <div class="alert alert--success">
                Thanks for subscribing!
              </div>
            {% endif %}

            <div class="form-group">
              <input 
                type="email" 
                name="contact[email]" 
                class="form-input" 
                placeholder="Enter your email"
                required>
              <button type="submit" class="btn btn--primary">
                Subscribe
              </button>
            </div>
          {% endform %}
        </div>
      {% endif %}

    </div>

    {%- comment -%} Footer Bottom {%- endcomment -%}
    <div class="footer__bottom">
      <div class="footer__copyright">
        <p>© {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
      </div>

      <div class="footer__legal">
        <a href="/pages/privacy-policy">Privacy Policy</a>
        <a href="/pages/terms-of-service">Terms of Service</a>
      </div>
    </div>

  </div>
</footer>

<style>
  /* ==========================================
     FOOTER STYLES
     ========================================== */

  .site-footer {
    padding-top: var(--space-20);
    padding-bottom: var(--space-12);
  }

  .footer__main {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-12);
    margin-bottom: var(--space-12);
    padding-bottom: var(--space-12);
    border-bottom: 1px solid var(--color-gray-200);
  }

  @media (min-width: 1024px) {
    .footer__main {
      grid-template-columns: 2fr 1fr 1fr 1fr 1.5fr;
    }
  }

  /* Brand Column */
  .footer__column--brand {
    grid-column: span 1;
  }

  .footer__logo {
    display: inline-block;
    margin-bottom: var(--space-4);
  }

  .footer__tagline {
    font-size: var(--font-size-sm);
    color: var(--color-text-tertiary);
    margin-bottom: var(--space-6);
    max-width: 300px;
  }

  .footer__social {
    display: flex;
    gap: var(--space-4);
  }

  .footer__social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--color-text-tertiary);
    background-color: var(--color-white);
    border-radius: var(--radius-full);
    transition: all var(--duration-fast) var(--ease-out);
  }

  .footer__social a:hover {
    color: var(--color-primary);
    transform: translateY(-2px);
  }

  /* Links Columns */
  .footer__heading {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-4);
  }

  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__links li {
    margin-bottom: var(--space-3);
  }

  .footer__links a {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .footer__links a:hover {
    color: var(--color-primary);
  }

  /* Newsletter Column */
  .footer__newsletter-text {
    font-size: var(--font-size-sm);
    color: var(--color-text-tertiary);
    margin-bottom: var(--space-4);
  }

  .footer__newsletter-form .form-group {
    display: flex;
    gap: var(--space-2);
  }

  .footer__newsletter-form .form-input {
    flex: 1;
  }

  .footer__newsletter-form .btn {
    flex-shrink: 0;
  }

  /* Footer Bottom */
  .footer__bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-4);
  }

  .footer__copyright p {
    font-size: var(--font-size-sm);
    color: var(--color-text-tertiary);
    margin: 0;
  }

  .footer__legal {
    display: flex;
    gap: var(--space-6);
  }

  .footer__legal a {
    font-size: var(--font-size-sm);
    color: var(--color-text-tertiary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .footer__legal a:hover {
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .footer__bottom {
      flex-direction: column;
      text-align: center;
    }
  }
</style>

