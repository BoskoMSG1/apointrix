{% comment %}
  ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
  APPOINTLY - TEXT + IMAGE SPLIT
  Content section with image
  ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
{% endcomment %}

<section class="split-section section {% if section.settings.reverse %}split-section--reverse{% endif %}">
  <div class="container">
    <div class="split-section__wrapper">
      
      {%- comment -%} Content Side {%- endcomment -%}
      <div class="split-section__content" data-aos="fade-{% if section.settings.reverse %}right{% else %}up{% endif %}">
        
        {% if section.settings.subtitle != blank %}
          <span class="section-subtitle">{{ section.settings.subtitle }}</span>
        {% endif %}

        <h2 class="split-section__title">{{ section.settings.title }}</h2>
        
        <div class="split-section__description rte">
          {{ section.settings.description }}
        </div>

        {%- comment -%} Features List {%- endcomment -%}
        {% if section.blocks.size > 0 %}
          <ul class="split-section__features">
            {% for block in section.blocks %}
              {% if block.type == 'feature' %}
                <li {{ block.shopify_attributes }}>
                  {% render 'icon-check', size: 24 %}
                  <span>{{ block.settings.text }}</span>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        {% endif %}

        {% if section.settings.cta_text != blank %}
          <div class="split-section__cta">
            <a href="{{ section.settings.cta_link }}" class="btn btn--primary">
              {{ section.settings.cta_text }}
            </a>
          </div>
        {% endif %}

      </div>

      {%- comment -%} Image Side {%- endcomment -%}
      <div class="split-section__image" data-aos="fade-{% if section.settings.reverse %}left{% else %}up{% endif %}" data-aos-delay="200">
        {% if section.settings.image != blank %}
          <img 
            src="{{ section.settings.image | img_url: '800x' }}"
            srcset="{{ section.settings.image | img_url: '400x' }} 400w,
                    {{ section.settings.image | img_url: '800x' }} 800w,
                    {{ section.settings.image | img_url: '1200x' }} 1200w"
            sizes="(max-width: 768px) 100vw, 50vw"
            alt="{{ section.settings.image.alt | default: section.settings.title }}"
            loading="lazy">
        {% else %}
          <div class="split-section__placeholder">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

    </div>
  </div>
</section>

<style>
  .split-section {
    background-color: var(--color-bg-primary);
  }

  .split-section__wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  @media (min-width: 1024px) {
    .split-section__wrapper {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-16);
    }

    .split-section--reverse .split-section__wrapper {
      direction: rtl;
    }

    .split-section--reverse .split-section__content,
    .split-section--reverse .split-section__image {
      direction: ltr;
    }
  }

  .split-section__title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--space-6);
    color: var(--color-text-primary);
  }

  .split-section__description {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-8);
  }

  .split-section__features {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-8) 0;
  }

  .split-section__features li {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
  }

  .split-section__features svg {
    flex-shrink: 0;
    color: var(--color-success);
    margin-top: 2px;
  }

  .split-section__image {
    position: relative;
    border-radius: var(--radius-2xl);
    overflow: hidden;
  }

  .split-section__image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .split-section__placeholder {
    aspect-ratio: 4 / 3;
    background-color: var(--color-bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-svg {
    width: 60%;
    height: auto;
    opacity: 0.3;
  }
</style>

