{% comment %}
  Social sharing buttons
  Usage: {% render 'social-sharing', share_title: page.title, share_url: page.url %}
{% endcomment %}

<div class="social-sharing">
  <span class="social-sharing__label">Share:</span>
  
  <a 
    href="https://www.facebook.com/sharer/sharer.php?u={{ share_url | url_encode }}"
    target="_blank"
    rel="noopener"
    class="social-sharing__button"
    aria-label="Share on Facebook">
    <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
      <path d="M20 10.06C20 4.5 15.52 0 10 0S0 4.5 0 10.06c0 5.02 3.66 9.18 8.44 9.94v-7.03H5.9v-2.91h2.54V7.85c0-2.51 1.49-3.89 3.78-3.89 1.09 0 2.24.19 2.24.19v2.46h-1.26c-1.24 0-1.63.77-1.63 1.56v1.88h2.78l-.44 2.91h-2.34v7.03C16.34 19.24 20 15.08 20 10.06z"/>
    </svg>
  </a>

  <a 
    href="https://twitter.com/intent/tweet?url={{ share_url | url_encode }}&text={{ share_title | url_encode }}"
    target="_blank"
    rel="noopener"
    class="social-sharing__button"
    aria-label="Share on Twitter">
    <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
      <path d="M19.95 3.81c-.74.33-1.54.55-2.38.65a4.16 4.16 0 001.82-2.27c-.8.47-1.68.81-2.61.99a4.12 4.12 0 00-7.02 3.76 11.7 11.7 0 01-8.5-4.31 4.12 4.12 0 001.28 5.5c-.68-.02-1.32-.21-1.88-.52v.05c0 2 1.42 3.67 3.3 4.05a4.1 4.1 0 01-1.86.07 4.13 4.13 0 003.85 2.86A8.27 8.27 0 010 15.54a11.65 11.65 0 006.29 1.84c7.55 0 11.68-6.25 11.68-11.67 0-.18 0-.35-.01-.53A8.35 8.35 0 0020 3.81z"/>
    </svg>
  </a>

  <a 
    href="https://www.linkedin.com/shareArticle?mini=true&url={{ share_url | url_encode }}&title={{ share_title | url_encode }}"
    target="_blank"
    rel="noopener"
    class="social-sharing__button"
    aria-label="Share on LinkedIn">
    <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
      <path d="M17.04 17.04h-2.96v-4.64c0-1.11-.02-2.53-1.54-2.53-1.54 0-1.78 1.2-1.78 2.45v4.72H7.8V7.5h2.84v1.3h.04c.4-.75 1.36-1.54 2.81-1.54 3 0 3.55 1.98 3.55 4.55v5.23zM4.45 6.19a1.72 1.72 0 110-3.44 1.72 1.72 0 010 3.44zM5.93 17.04H2.96V7.5h2.97v9.54zM18.52 0H1.48C.66 0 0 .65 0 1.44v17.12C0 19.35.66 20 1.48 20h17.04c.82 0 1.48-.65 1.48-1.44V1.44C20 .65 19.34 0 18.52 0z"/>
    </svg>
  </a>

  <button 
    class="social-sharing__button"
    onclick="navigator.clipboard.writeText('{{ share_url }}'); this.innerHTML='Copied!'"
    aria-label="Copy link">
    <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor">
      <path d="M10 13a3 3 0 100-6 3 3 0 000 6z" stroke-width="2"/>
      <path d="M10 13V17M10 3V7M13 10H17M3 10H7" stroke-width="2" stroke-linecap="round"/>
    </svg>
  </button>
</div>

<style>
  .social-sharing {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    flex-wrap: wrap;
  }

  .social-sharing__label {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-tertiary);
  }

  .social-sharing__button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: var(--color-bg-secondary);
    border: none;
    border-radius: var(--radius-full);
    color: var(--color-text-secondary);
    cursor: pointer;
    transition: all var(--duration-fast) var(--ease-out);
  }

  .social-sharing__button:hover {
    background-color: var(--color-primary);
    color: var(--color-white);
    transform: translateY(-2px);
  }
</style>
